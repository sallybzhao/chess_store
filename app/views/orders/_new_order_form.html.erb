<% unless @cart_items.nil? || @cart_items.empty? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="300">Order ID</th>
        <th> Price </th>
        <th> Quantity </th>
        <th> Subtotal </th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |order_item| %>
        <tr>
          <td><%= link_to order_item.item.name, item_path(order_item.item.id) %></td>
          <td> <%= number_to_currency(order_item.item.current_price) %> </td>
          <td> <%= order_item.quantity %> </td>
          <td> <%= number_to_currency(order_item.subtotal) %> </td>
          <td><%= link_to "Remove", remove_from_cart_path(order_item.item.id) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p> Order Subtotal: <%= number_to_currency(@total_cost) %> </p>
  <p> Shipping Cost : <%= number_to_currency(@shipping_cost) %> </p>
  <p> Grand Total : <%= number_to_currency(@grand_total) %> </p>

<% else %>
    No items in the cart
<% end %>

<%= simple_form_for @order do |f| %>
    <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <h3> My Information </h3>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <p> Name: <%= current_user.proper_name %> </p>
    <p> Email: <%= current_user.email %> </p>
    <p> Phone: <%= current_user.phone %> </p>

    <p> Ship To </p>
  <%= f.input :school_id, :collection => School.active.alphabetical, :prompt => "Select School..." %>

  <h3> Payment Information </h3>
    <p>
      <%= f.label :credit_card_number %> <br />
      <%= f.text_field :credit_card_number %>
    </p>
    <p>
      <%= f.label :expiration_year %> <br />
      <%= f.text_field :expiration_year %>

      <%= f.label :expiration_month %> <br />
      <%= f.text_field :expiration_month %>
    </p>
  
  <p><%= f.submit (@order.new_record? ? "Place Order" : "Update") %></p>

<% end %>