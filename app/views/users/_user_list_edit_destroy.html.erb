<div class="form-actions">
<% if @user.role == "manager" || @user.role == "admin" %>
  <%= link_to(users_path, class: 'button radius') do %>
    <i class="fa fa-list"></i>
    &nbsp;Display All Users
  <% end %>
<% end %>
  &nbsp;&nbsp;

  <% if current_user.role == "manager" %>
    <% if @user.role == "shipper" || @user.role == "manager" %>
      <%= link_to(edit_user_path(@user), class: 'button radius') do %>
        <i class="fa fa-pencil"></i>
        &nbsp;<%= "Edit #{@user.proper_name}" %>
      <% end %>
      &nbsp;&nbsp;

      <%= link_to(user_path(@user), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{@user.proper_name}"}, class: 'button radius alert') do %>
        <i class="fa fa-trash-o"></i>
        &nbsp;<%= "Delete #{@user.name}" %>
      <% end %>
    <% end %>
  <% elsif current_user.role == "admin" %>
    <%= link_to(edit_user_path(@user), class: 'button radius') do %>
        <i class="fa fa-pencil"></i>
        &nbsp;<%= "Edit #{@user.proper_name}" %>
      <% end %>
      &nbsp;&nbsp;

      <%= link_to(user_path(@user), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{@user.proper_name}"}, class: 'button radius alert') do %>
        <i class="fa fa-trash-o"></i>
        &nbsp;<%= "Delete #{@user.name}" %>
      <% end %>
    
<% end %>
</div>