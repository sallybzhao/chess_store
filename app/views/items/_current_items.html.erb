<% unless items.nil? || items.empty? %>
  <h5><%= item_type.capitalize %></h5>

  <table class="table table-striped">
    <tr>
        <th></th>
        <% if logged_in? %>
          <% if current_user.role == "manager" || current_user.role == "admin" %>
          <th width="100">Inventory</th>
          <% end %>
        <% end %>
    </tr>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td> <p><%= link_to image_tag("#{item.picture}"), item_path(item) %></p> 
               <p><%= link_to item.name, item_path(item) %></p>
               <p><%= number_to_currency item.current_price %></p></td>
          <% if logged_in? %>
            <% if current_user.role == "manager" || current_user.role == "admin" %>
              <td><%= item.inventory_level %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>








