<div id="item_details">
<div class="row">
  <div class="small-7 columns">
    <h3><%= @item.name %></h3>
  </div>
  <div class="small-5 columns">
    <% unless @item.picture_url.nil? %>
      <p><%= image_tag @item.picture_url %></p>
    <% end %>
  </div>
</div>
<p>
  <b>Price</b>: <%= @item.current_price.nil? ? 'N/A' : number_to_currency(@item.current_price) %>

</p>

<p> <%= @item.description %></p>

<% if logged_in? %>
  <% if current_user.role != "customer" %>
    <%= render :partial => "inventory_level" %>
  <% end %>

  <% if current_user.role == "manager" || current_user.role == "admin" %>
  <p>
    <b>Reorder Level</b>: <%= @item.reorder_level.nil? ? 'N/A' : @item.reorder_level %>
  </p>
  <% end %>
<% end %>

<p>
  <b>Category</b>: <%= @item.category.capitalize %>
</p>

<p>
  <b>Color</b>: <%= @item.color.nil? ? 'N/A' : @item.color %>
</p>

<p>
  <b>Total weight</b>: <%= @item.weight.nil? ? 'N/A' : @item.weight %> lbs.
</p>
 <%= link_to(add_to_cart_path, class: 'button alert radius right') do %>
    Add to Cart
  <% end %>

</div>

