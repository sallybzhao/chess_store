<%= stylesheet_link_tag    "general" %>
<div class="contain-to-grid" >
  <nav class="top-bar" data-topbar role="navigation"> 
    <section class="top-bar-section" id="navbar">
      <ul class="left">
        <!-- link to home -->

        <li><img src="assets/logo.png" alt="logo" id="logo"/><li>
        <li><%= link_to "HOME", home_path %></li>

        <!-- options for items -->
        
          

        <% if logged_in? %>
          <% if current_user.role != "shipper" && current_user.role != "customer" %>
            <li class="has-dropdown">
              <%= link_to "ITEMS", items_path %>
              <ul class="dropdown">
                <li><%= link_to "Reorder List", home_path %></li>
                <li><%= link_to "Add an Item", new_item_path %></li>
              </ul>
            </li>
          <% else %> 
            <li><%= link_to "ITEMS", items_path %></li>
          <% end %> 
          

        <!-- options for purchases -->
          <% if current_user.role != "shipper" && current_user.role != "customer" %>
            <li>
              <%= link_to "PURCHASES", purchases_path %>
            </li>
          <% end %>

          <!-- options for prices -->
          <% if current_user.role != "shipper" && current_user.role != "customer" %>
            <li>
              <%= link_to "PRICES", item_prices_path %>
            </li>
          <% end %>

          <li>
            <%= link_to "SCHOOLS", schools_path %>
          </li>

          <% if current_user.role == "manager" || current_user.role == "admin" %>
            <li><%= link_to "USERS", users_path %></li>
            <li><%= link_to "ORDERS", orders_path %></li>
          <% end %>

          <li class="has-dropdown">
            <%= link_to "My Account", user_path(current_user) %>
            <ul class="dropdown">
              <li><%= link_to "My Orders", orders_path %></li>
              <li><%= link_to "My Cart", index_path %></li>
            </ul>
          </li>

        <% else %>
          <!-- Guests -->
          <li><%= link_to "ITEMS", items_path %></li>
        <% end %>

        <!-- content once logged in goes here -->
        <% if logged_in? %>
          <li><%= link_to 'Logout', logout_path %></li>
          <%#= current_user.proper_name %><%#= current_user.role %>
        <% else %>
          <li><%= link_to 'Login', login_path %></li>
          <li><%= link_to 'Sign Up', new_user_path %></li>
        <% end %>

        
      </ul>
    </section>
  </nav>
</div>