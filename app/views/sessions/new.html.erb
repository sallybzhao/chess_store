<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    "session" %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  </head>

  <body>
    <img src="assets/landing.jpg" alt="landing image" id="landing_img"/>
    <div id="log_in">
    <div class="row">
      <div class="small-7 columns" id="login_box">
        <h2 id="heading">Log In</h2>
        <% if !@flash.nil? %>
          <%= @flash %>
        <% end %>
        <%= form_tag sessions_path do %>
          <div class="control-group">
            <%#= label_tag :email %>
            <div class="controls ">
              <%= text_field_tag :email, params[:email], placeholder: 'Email'%>
            </div>
          </div>
          <div class="control-group">
            <%#= label_tag :password %>
            <div class="controls textbox">
              <%= password_field_tag(:password, "", placeholder: "Password") %>
            </div>
          </div>
          
          <div class="actions" id="login_button"><%#= submit_tag "Log In" %>
          <!-- <div class="actions"><input type="submit" value="Log in"> </div> -->
          <button type="submit"> <img src="assets/login.png" alt="login button" /> </button> 
          <p> Log in </p>
          </div>

          <div class="actions" id="guest_button">
          <%= link_to image_tag("guest.png"), items_path %>
          <p> Guest </p>
          </div>

        <% end %>
      </div>
    </div>
    </div>
  </body>
</html>
